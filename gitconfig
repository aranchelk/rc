# To include this file in your git config, add the following to ~/.gitconfig
# [include]
#     path = <relative path from .gitconfig to this file>

[core]
    warnambiguousrefs = false
	pager = view -
[alias]
    # Basic abbreviations
    st = status
    br = branch
    co = checkout
    ci = commit
    ri = rebase -i
    aa = add -A
    au = add -A

    v = log --oneline --abbrev-commit --all --graph

    # Special remote stuff
    remote-br = branch -r
    remote-co = "!f() { git fetch origin && git checkout -b \"$1\" origin/"$1"; }; f"

    # Special checkins
    cim = commit -m
    ciw = commit -m WiP
    ph = push origin HEAD
    shove = "!f() { git add -u && git commit -m "WIP" || true && git push origin $1;}; f"

    # Special deletes
    unstage = reset HEAD 
    stop-tracking = rm --cached -r

    # Stage the deletion in git for files that have been deleted on the file system
    stage-deleted = rm $(git ls-files --deleted)

    # Other
    get-hash = rev-parse
    rph = rev-parse HEAD
    isClean = "!f() { test -z "$(git ls-files --exclude-standard --others)" && git diff-index HEAD --quiet;}; f"

[diff]
    tool = vimdiff
[init]
	defaultBranch = main
[user]
	email = carl@datable.io
	name = Carl Haken
[pager]
	diff = view -
	log = view -
	show = view -
[color]
	diff = false
	branch = false
